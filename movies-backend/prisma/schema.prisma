generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Media {
  id          Int      @id @default(autoincrement())
  title       String
  type        String
  director    String
  budget      Float
  location    String
  duration    String
  year        Int
  description String
  posterUrl   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      Int     
  user        User    @relation(fields: [userId], references: [id])

  weekendPicks WeekendPick[]
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  createdAt    DateTime      @default(now())
  media        Media[]
  weekendPicks WeekendPick[]
}

model WeekendPick {
  id       Int      @id @default(autoincrement())
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
  media    Media    @relation(fields: [mediaId], references: [id])
  mediaId  Int
  createdAt DateTime @default(now())
}